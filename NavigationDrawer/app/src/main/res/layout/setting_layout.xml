<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#FF3F9FE0"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/locateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设 置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_action_back"
            android:scaleType="matrix" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/recommend"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical" >


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_chevron_dark"
        android:scaleType="matrix" />
    <ImageView
        android:id="@+id/img_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_more_action_share"
        android:scaleType="matrix" />
    <TextView
        android:id="@+id/recommendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_recommend"
        android:layout_alignBottom="@id/img_recommend"
        android:layout_marginLeft="35dp"
        android:text="推荐给好友"
        android:textColor="#000"
        android:textSize="15sp" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_chevron_dark"
            android:scaleType="matrix" />
        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_more_feedback"
            android:scaleType="matrix" />
        <TextView
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_comment"
            android:layout_alignBottom="@id/img_comment"
            android:layout_marginLeft="35dp"
            android:text="意见反馈"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/receivepush"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@+id/swn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ig_switch_normal"
            android:scaleType="matrix" />
        <ImageView
            android:id="@+id/img_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_more_notification"
            android:scaleType="matrix" />
        <TextView
            android:id="@+id/pushText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_push"
            android:layout_alignBottom="@id/img_push"
            android:layout_marginLeft="35dp"
            android:text="接受消息推送"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>



</LinearLayout>
